<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/date_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_weight="1">

    <TextView
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:textColor="?attr/customRedTextColor"
        android:background="?attr/customSunColor"
        android:maxLines="4"
        android:textSize="@dimen/calendar_font_size"
        tools:text="1"/>

    <TextView
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:textColor="?attr/customTextColor"
        android:background="?attr/customBackColor"
        android:maxLines="4"
        android:textSize="@dimen/calendar_font_size"
        tools:text="2" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:textColor="?attr/customTextColor"
        android:background="?attr/customBackColor"
        android:maxLines="4"
        android:textSize="@dimen/calendar_font_size"
        tools:text="3" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:textColor="?attr/customTextColor"
        android:background="?attr/customBackColor"
        android:maxLines="4"
        android:textSize="@dimen/calendar_font_size"
        tools:text="4" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:textColor="?attr/customTextColor"
        android:background="?attr/customBackColor"
        android:maxLines="4"
        android:textSize="@dimen/calendar_font_size"
        tools:text="5" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:textColor="?attr/customTextColor"
        android:background="?attr/customBackColor"
        android:maxLines="4"
        android:textSize="@dimen/calendar_font_size"
        tools:text="6" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:background="?attr/customSatColor"
        android:textColor="?attr/customBlueTextColor"
        android:maxLines="4"
        android:textSize="@dimen/calendar_font_size"
        tools:text="7" />
</TableRow>