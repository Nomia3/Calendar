<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme.Default" parent="MyTheme">
        <item name="customTextColor">@color/black</item>
        <item name="customBackColor">@color/whiteBack</item>
        <item name="customLineColor">@color/black</item>
        <item name="customSunColor">@color/whiteRed</item>
        <item name="customSatColor">@color/whiteBlue</item>
        <item name="customRedTextColor">@color/red</item>
        <item name="customBlueTextColor">@color/blue</item>
        <item name="customGrayBackColor">@color/whiteGray</item>
    </style>

    <style name="MyTheme.Dark" parent="MyTheme">
        <item name="customTextColor">@color/white</item>
        <item name="customBackColor">@color/black</item>
        <item name="customLineColor">@color/white</item>
        <item name="customSunColor">@color/blackRed</item>
        <item name="customSatColor">@color/blackBlue</item>
        <item name="customRedTextColor">@color/red</item>
        <item name="customBlueTextColor">@color/blue</item>
        <item name="customGrayBackColor">@color/blackGray</item>
    </style>

</resources>
